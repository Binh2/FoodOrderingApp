<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderingApp.Pages.Homepage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="White">
            <StackLayout Margin="15,25,25,0">
                <!--  Top Search Bar  -->
                <StackLayout HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                    <Frame
                        Padding="0"
                        BackgroundColor="#F7F7F7"
                        CornerRadius="45"
                        HasShadow="False"
                        HeightRequest="40"
                        HorizontalOptions="FillAndExpand">
                        <StackLayout Orientation="Horizontal" BackgroundColor="White">
                            <SearchBar  Placeholder="Search items"
                                        Margin="20,10,0,10"
                                        TextColor="Black"
                                        BackgroundColor="White"
                                        FontSize="Medium"></SearchBar>
                        </StackLayout>
                    </Frame>
                </StackLayout>
            </StackLayout>

            <ScrollView VerticalScrollBarVisibility="Never">
                <StackLayout>
                    <StackLayout Margin="0,5,0,5">
                        <StackLayout Orientation="Horizontal">
                            <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HorizontalOptions="StartAndExpand"
                                    Text="Category"
                                    TextColor="Black">
                            </Label>
                            <StackLayout Margin="10,5,0,5">
                                <Label
                                        FontSize="16"
                                        HorizontalOptions="EndAndExpand"
                                        Text="See All"
                                        TextColor="Black">
                                </Label>
                            </StackLayout>
                        </StackLayout>
                        <StackLayout Margin="0,20,0,20"
                                     HeightRequest="90"
                                     Orientation="Horizontal">
                            <CollectionView  x:Name="Lstcategories" SelectionChanged="Lstcategories_SelectionChanged">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout ItemSpacing="10" Orientation="Horizontal" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <StackLayout>
                                            <Frame
                                          Margin="1,5,10,5"
                                          Padding="0"
                                          CornerRadius="30"
                                          HasShadow="True"
                                          HeightRequest="60"
                                          IsClippedToBounds="False"
                                          WidthRequest="60">
                                                <Image
                                            Margin="15"
                                            Aspect="AspectFit"
                                            HorizontalOptions="CenterAndExpand"
                                            Source="{Binding CategoryImage}"
                                            VerticalOptions="CenterAndExpand" />
                                            </Frame>
                                            <Label
                                            FontSize="12"
                                            HorizontalOptions="Center"
                                            Text="{Binding CategoryName}"
                                            TextColor="Black">
                                            </Label>
                                        </StackLayout>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Margin="0,10,0,10">
                        <StackLayout Orientation="Horizontal">
                        <Label
                                    FontAttributes="Bold"
                                    FontSize="18"
                                    HorizontalOptions="StartAndExpand"
                                    Text="Recommended"
                                    TextColor="Black">
                        </Label>
                        <StackLayout Margin="10,5,0,5">
                            <Label
                                        FontSize="16"
                                        HorizontalOptions="EndAndExpand"
                                        Text="See All"
                                        TextColor="Black">
                            </Label>
                        </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
                
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
