<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderingApp.Pages.ForgotPasswordPage">
    <ContentPage.Content>
        <Frame Padding="15">
            <Frame>
                <StackLayout>
                    <Label Text="Email" Style="{StaticResource EntryLabelStyle}"></Label>
                    <Entry ReturnType="Done" IsSpellCheckEnabled="False" IsTextPredictionEnabled="False" x:Name="emailEntry"  Completed="Continue"></Entry>
                    <Button Text="Continue" Style="{StaticResource ButtonStyle}" Margin="7,20" x:Name="continueBtn" Clicked="Continue"></Button>
                </StackLayout>
            </Frame>
        </Frame>
    </ContentPage.Content>
</ContentPage>