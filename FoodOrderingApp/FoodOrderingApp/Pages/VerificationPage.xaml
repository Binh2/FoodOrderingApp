<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderingApp.Pages.VerificationPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Verification" Style="{StaticResource TitleStyle}"></Label>
            <Label Text="A 6-digit PIN has been sent to your email adddress, enter it below to continue" Style="{StaticResource SubtitleStyle}"></Label>
            <StackLayout Orientation="Horizontal">
                <Entry Keyboard="Numeric" VerticalOptions="Start" HorizontalOptions="FillAndExpand" x:Name="userPassword" 
                       ReturnType="Next" Margin="0" MaxLength="1"
                       IsTextPredictionEnabled="False" IsSpellCheckEnabled="False"></Entry>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>