<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderingApp.Pages.FoodDetailPage"
             BackgroundColor="White">
    <ContentPage.Content>
        <Grid>
            <ListView x:Name="food" 
                      SeparatorVisibility="None"
                      HasUnevenRows="True"
                      ItemSelected="LstFood_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid RowDefinitions="300,Auto,Auto,Auto,Auto,Auto" Padding="20">
                                    <Frame Grid.Row="0" CornerRadius="20" HasShadow="True">
                                        <Image Margin="-20" Source="{Binding FoodImages}" Aspect="Fill"></Image>
                                    </Frame>
                                    <StackLayout Grid.Row="1" Orientation="Horizontal">
                                        <Label Text="{Binding FoodName}" FontAttributes="Bold" TextColor="#202020" FontSize="20"></Label>
                                        <Label x:Name="lblStar" TextColor="#202020" 
                                               FontSize="20"></Label>
                                    </StackLayout>
                                    <StackLayout Grid.Row="2" Orientation="Horizontal">
                                        <Label TextColor="Navy"
                                               FontSize="20"></Label>
                                        <Label Text="Charlottetown, Canada" TextColor="#202020"></Label>
                                    </StackLayout>
                                    <Label Grid.Row="3" Text="Details" FontSize="15" Margin="0,20,0,0" TextColor="#202020" FontAttributes="Bold"></Label>
                                <Label Grid.Row="4" Text="{Binding FoodDetail}" TextColor="#202020"></Label>                                    
                                    <Label Text="Comment"
                                          Grid.Row="6" TextColor="Gray"></Label>
                                    <StackLayout Grid.Row="7" VerticalOptions="EndAndExpand" HeightRequest="60" Orientation="Horizontal" BackgroundColor="White" Margin="-20" Padding="20,10">
                                        <Label Text="{Binding FoodPrice}" TextColor="#202020" FontSize="20" VerticalOptions="Center"></Label>
                                        <Button Text="Add to cart" CornerRadius="20" HorizontalOptions="EndAndExpand" WidthRequest="180" BackgroundColor="#202020" TextColor="White"></Button>
                                    </StackLayout>
                                </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ContentPage.Content>
</ContentPage>