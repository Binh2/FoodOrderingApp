<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderingApp.TestPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="label" FontSize="30"></Label>
            <ListView x:Name="listView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label FontSize="30" Text="{Binding CategoryID}"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Hello" x:Name="helloBtn" Clicked="helloBtn_Clicked"></Button>
            <Button Text="Get categories" x:Name="getCategoriesBtn" Clicked="getCategoriesBtn_Clicked"></Button>
            <Button Text="Insert card" x:Name="insertCardBtn" Clicked="insertCardBtn_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>