<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderingApp.Views.PriceView">
  <ContentView.Content>
        <Label FontSize="18" VerticalOptions="Start" TextColor="#00c569">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="$"></Span>
                        <Span Text="{Binding Price, FallbackValue='0'}"></Span>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </ContentView.Content>
</ContentView>