<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderingApp.Views.LabelImageView">
  <ContentView.Content>
        <Frame Padding="15" CornerRadius="5">
            <StackLayout Orientation="Horizontal">
                <Image Source="{Binding Source}" WidthRequest="{Binding WidthRequest, FallbackValue=30}"></Image>
                <Label Text="{Binding MyText}" TextColor="Black" FontSize="14" VerticalTextAlignment="Center"
                       HorizontalTextAlignment="Center" HorizontalOptions="CenterAndExpand" FontAttributes="Bold"></Label>
                <BoxView WidthRequest="{Binding WidthRequest, FallbackValue=30}"></BoxView>
            </StackLayout>
            <Frame.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding TapCommand}"></TapGestureRecognizer>
            </Frame.GestureRecognizers>
        </Frame>
    </ContentView.Content>
</ContentView>