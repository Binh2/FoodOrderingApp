<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderingApp.Views.StateView">
    <ContentView.Content>
        <Label Text="{Binding Path=StateDescription, FallbackValue=''}" 
               BackgroundColor="{Binding Path=Color, FallbackValue={DynamicResource GreenColor}}" 
               TextColor="White" Padding="30,0"></Label>
    </ContentView.Content>
</ContentView>