<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodOrderingApp.App">
    <Application.Resources>
        <Color x:Key="GreenColor">#00c569</Color>
        <Color x:Key="OrangeColor">#fec107</Color>
        <Color x:Key="RedColor">#ff4200</Color>
        <ResourceDictionary>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackground" Value="Black"></Setter>
                <Setter Property="BarTextColor" Value="White"></Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>